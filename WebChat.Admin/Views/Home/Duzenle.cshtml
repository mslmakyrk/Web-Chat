@using WebChat.Data.Model
@model Kullanici
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <header class="panel-heading">@ViewBag.Title</header>
                    <div class="panel-body">
                        @Html.HiddenFor(x => x.ID)
                        <form role="form">
                            <div class="form-group">
                                <label>Kullanıcı Adı Soyadı</label>
                                @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", id = "AdSoyad", placeholder = "Ad Soyad" })
                            </div>
                            <div class="form-group">
                                <label>Mail</label>
                                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", id = "Mail", placeholder = "Mail" })
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control", id = "Telefon", placeholder = "Telefon" })
                            </div>
                            <div class="form-group">
                                <label>Şifre</label>
                                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", id = "Sifre", placeholder = "Şifre" })
                            </div>
                            <div class="form-group">
                                <label>Rol</label><br/>
                                <select class="custom-select my-1 mr-sm-2" id="Rol">
                                    @if (Model.Rol == 1)
                                    {

                                        <option selected value="1">Admin</option>
                                        <option value="2">Kullanıcı</option>

                                    }
                                    else
                                    {
                                       
                                            <option value="1">Admin</option>
                                            <option selected value="2">Kullanıcı</option>
                                        
                                    }
                                </select>



                            </div>
                            

                            <a href="#" class="btn btn-default" onclick='Duzenle()'>Kaydet</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Basic form -->

    </div>
</div>
